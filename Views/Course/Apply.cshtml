@model Candidate
<div class="display-6">
    Apply
</div>
<br>
<hr><br>
<form method="post" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select class="form-control" asp-for="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">25</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Core MVC" />
            <label>ASP.Net Core MVC</label>
        </p>
        <p> <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Core API" />
            <label>ASP.Net Core API</label>
        </p>
        <p> <input id="mvc" type="radio" asp-for="SelectedCourse" value="Blazor" />
            <label>Blazor</label>
        </p>
    </fieldset>


    <div>
        <button class="btn btn-primary my-2" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>


</form>